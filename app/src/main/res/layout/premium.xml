<?xml version="1.0" encoding="utf-8"?><ScrollView	xmlns:android="http://schemas.android.com/apk/res/android"	xmlns:app="http://schemas.android.com/apk/res-auto"	xmlns:tools="http://schemas.android.com/tools"	android:layout_width="match_parent"	android:scrollbars="none"	android:layout_height="match_parent"	android:background="#F2F4F8">		<androidx.constraintlayout.widget.ConstraintLayout		android:layout_width="match_parent"		android:layout_height="match_parent"		android:background="@drawable/home_bg"		android:padding="10dp">				<ImageView			android:id="@+id/premium_close_btn"			android:layout_width="50dp"			android:layout_height="50dp"			android:padding="3dp"			android:tint="#000"			android:src="@drawable/ad_close"			android:clickable="true"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintTop_toTopOf="parent"			/>				<androidx.viewpager.widget.ViewPager			android:id="@+id/viewPager"			android:layout_width="match_parent"			android:layout_height="150dp"			android:layout_marginTop="5dp"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintHorizontal_bias="0.4"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@+id/premium_close_btn"/>				<com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator			android:id="@+id/spring_dots_indicator"			android:layout_width="wrap_content"			android:layout_height="wrap_content"			android:layout_marginTop="15dp"			app:dampingRatio="0.5"			app:dotsColor="@color/gray_mid"			app:dotsCornerRadius="10dp"			app:dotsSize="8dp"			app:dotsSpacing="2dp"			app:dotsStrokeColor="@color/gray_mid"			app:dotsStrokeWidth="1dp"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/viewPager"			app:stiffness="300" />			<LinearLayout				android:id="@+id/verticallayout"				android:layout_width="match_parent"				android:layout_height="130dp"				android:layout_below="@+id/viewPager"				android:layout_marginTop="20dp"				android:background="@drawable/linear_border_boxes"				android:divider="@drawable/divider"				android:dividerPadding="10dp"				android:gravity="center"				android:orientation="horizontal"				android:showDividers="middle"				app:layout_constraintEnd_toEndOf="parent"				app:layout_constraintStart_toStartOf="parent"				app:layout_constraintTop_toBottomOf="@id/spring_dots_indicator">				<LinearLayout					android:id="@+id/premium_low"					android:layout_width="match_parent"					android:layout_height="match_parent"					android:layout_gravity="center"					android:layout_weight="1"					android:gravity="center"					android:orientation="vertical">					<TextView						android:id="@+id/first"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:text="1"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="@color/colorWhite"						android:textSize="25sp" />					<TextView						android:id="@+id/second"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:text="week"						android:textColor="@color/colorWhite"						android:textSize="11sp" />					<TextView						android:id="@+id/third"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:text="$2.00"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="@color/colorWhite"						android:textSize="14sp" />					<TextView						android:id="@+id/fourth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:layout_marginTop="10dp"						android:text="$2.00/wk"						android:fontFamily="@font/middle_bold"						android:textColor="@color/colorWhite"						android:textSize="12sp"						android:textStyle="bold" />				</LinearLayout>				<LinearLayout					android:id="@+id/premium_mid"					android:layout_width="match_parent"					android:layout_height="match_parent"					android:layout_gravity="center"					android:layout_weight="1"					android:gravity="center"					android:orientation="vertical">					<TextView						android:id="@+id/firstmonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="1"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="@color/colorWhite"						android:textSize="25sp" />					<TextView						android:id="@+id/secondmonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="month"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="@color/colorWhite"						android:textSize="11sp" />					<TextView						android:id="@+id/thirdmonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="$5.00"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="@color/colorWhite"						android:textSize="14sp" />					<TextView						android:id="@+id/fourthmonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_marginTop="10dp"						android:text="$5.00/mo"						android:textColor="@color/colorWhite"						android:textSize="12sp"						android:fontFamily="@font/middle_bold"						android:textStyle="bold" />				</LinearLayout>				<LinearLayout					android:id="@+id/premium_high"					android:layout_width="match_parent"					android:layout_height="match_parent"					android:layout_gravity="center"					android:background="@drawable/shape_premium_right"					android:layout_weight="1"					android:gravity="center"					android:fontFamily="@font/middle_bold"					android:textStyle="bold"					android:orientation="vertical">					<TextView						android:id="@+id/tmonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="12"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="@color/colorWhite"						android:textSize="25sp" />					<TextView						android:id="@+id/twelvemonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:layout_below="@+id/image"						android:text="month"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="@color/colorWhite"						android:textSize="8dp" />					<TextView						android:id="@+id/twelveemonth"						android:layout_width="wrap_content"						android:layout_height="wrap_content"						android:text="$50.00"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="@color/colorWhite"						android:textSize="14sp" />					<TextView						android:id="@+id/twelvesavemonth"						android:layout_width="match_parent"						android:layout_height="wrap_content"						android:gravity="center_horizontal"						android:text="SAVE 58%"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textAlignment="center"						android:textColor="#fff"						android:textSize="8dp" />					<TextView						android:id="@+id/twelveeemonth"						android:layout_width="match_parent"						android:layout_height="wrap_content"						android:gravity="center_horizontal"						android:text="$3.99/mo"						android:layout_marginTop="5dp"						android:fontFamily="@font/middle_bold"						android:textStyle="bold"						android:textColor="#fff"						android:textSize="12sp"						/>				</LinearLayout>		</LinearLayout>		<TextView			android:id="@+id/no_commit"			android:layout_width="wrap_content"			android:layout_height="wrap_content"			android:text="No Commitment , Cancel Anytime"			android:textColor="@color/colorWhite"			android:textSize="9dp"			android:layout_marginTop="15dp"			android:textStyle="bold"			android:fontFamily="@font/middle_bold"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/verticallayout" />		<Button			android:id="@+id/premium"			android:layout_width="match_parent"			android:layout_height="40dp"			android:layout_marginTop="20dp"			android:background="@drawable/shape_rounded_sky_blue_button"			android:text="Get Premium"			android:textStyle="bold"			android:fontFamily="@font/middle_bold"			android:textAllCaps="false"			android:textColor="#fff"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/no_commit" />		<Button			android:id="@+id/freetrial"			android:layout_width="match_parent"			android:layout_height="40dp"			android:layout_marginTop="20dp"			android:background="@drawable/shape_rounded_sky_blue_button2"			android:text="Watch Ad for one Hour Premium"			android:fontFamily="@font/middle_bold"			android:textAllCaps="false"			android:textColor="#fff"			android:textStyle="bold"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/premium" />		<TextView			android:id="@+id/restore"			android:layout_width="wrap_content"			android:layout_height="wrap_content"			android:layout_marginTop="10dp"			android:text="Restore Purchase"			android:textColor="#000"			android:textSize="9dp"			android:textStyle="bold"			android:fontFamily="@font/middle_bold"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@id/freetrial" />		<LinearLayout			android:id="@+id/linearLayout"			android:layout_width="fill_parent"			android:layout_height="match_parent"			android:gravity="start"			android:orientation="vertical"			android:paddingStart="15dp"			android:paddingEnd="15dp"			app:layout_constraintEnd_toEndOf="parent"			app:layout_constraintStart_toStartOf="parent"			app:layout_constraintTop_toBottomOf="@+id/restore">						<TextView				android:id="@+id/subscription"				android:layout_width="wrap_content"				android:layout_height="wrap_content"				android:layout_gravity="center_horizontal"				android:text="Subscription Terms"				android:layout_marginTop="5dp"				android:fontFamily="@font/middle_bold"				android:layout_marginBottom="5dp"				android:textColor="#000"				android:textSize="10dp"				android:textStyle="bold" />						<TextView				android:id="@+id/pointone"				android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="5dp"				android:text="1. Subscription will be charged to your credit card through your Google account at confirmed of purchase."				android:textColor="#9C9EA1"				android:fontFamily="@font/middle_bold"				android:textSize="12sp" />						<TextView				android:id="@+id/pointtwo"				android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="3dp"				android:text="2. Your subscription will automatically renew unless you canceled at least 24 hours before the end of the current valid period "				android:textColor="#9C9EA1"				android:fontFamily="@font/middle_bold"				android:textSize="12sp" />						<TextView				android:id="@+id/pointthree"				android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="3dp"				android:fontFamily="@font/middle_bold"				android:text="3. To end a subscription, disable auto-renewal and allow the current period to end. It will not be possible to immediately cancel a subscription. "				android:textColor="#9C9EA1"				android:textSize="12sp" />						<TextView				android:id="@+id/pointfour"				android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="3dp"				android:text="4. Refunds are not avaiable for unused portions of a subscription. "				android:textColor="#9C9EA1"				android:textSize="14sp" />			<TextView				android:id="@+id/terms_page"				android:layout_width="match_parent"				android:layout_height="wrap_content"				android:layout_marginTop="3dp"				android:gravity="center"				android:text="Terms &amp; Conditions "				android:textColor="@color/colorgreen"				android:textSize="14sp" />		</LinearLayout>		</androidx.constraintlayout.widget.ConstraintLayout></ScrollView>